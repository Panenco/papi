{
  "mochaExplorer.files": "build/tests/**/*.test.js",
  "mochaExplorer.watch": "build/tests/**/*.test.js",
  "mochaExplorer.require": ["source-map-support/register"],
  "mochaExplorer.env": { "NODE_ENV": "test", "NODE_PATH": "./build" },
  "testExplorer.mergeSuites": true,
  "search.exclude": {
    "**/.git": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "node_modules/**": true,
    "build/**": true
  },
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "typescriptHero.imports.organizeOnSave": true,
  "files.exclude": {
    "**/node_modules": true
  },
  "typescript.tsdk": "node_modules\\typescript\\lib"
}
